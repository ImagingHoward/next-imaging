<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Use Node.js to handle requests -->
    <handlers>
      <add name="node" path="*" verb="*" modules="IsapiModule" scriptProcessor="D:\home\site\wwwroot\nodejs\node.exe" resourceType="Unspecified" />
    </handlers>

    <!-- Custom rewrite rules for Next.js SSR (optional) -->
    <rewrite>
      <rules>
        <rule name="NextJSSSR">
          <match url=".*" />
          <action type="Rewrite" url="index.js/{R:0}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Allow static files from Next.js to be served -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".html" mimeType="text/html" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
    </staticContent>

    <!-- Set up HTTP Headers (optional) -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="X-Content-Type-Options" value="nosniff" />
      </customHeaders>
    </httpProtocol>

  </system.webServer>
</configuration>
